{
  "name": "@neezer/cfg",
  "private": false,
  "version": "0.0.0-semantically-released",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "toml": "^2.3.3"
  },
  "bin": "./bin/cfg.js",
  "files": [
    "bin",
    "dist",
    "package.json"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.8",
    "fs-extra": "^7.0.1",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "semantic-release": "^17.2.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf dist",
    "lint": "tslint -p . && tsc --noEmit",
    "test": "jest",
    "prepublishOnly": "yarn build",
    "postinstall": "bin/cfg.js $INIT_CWD"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "**/*.json": [
      "prettier --write",
      "git add"
    ],
    "**/*.ts": [
      "prettier --write",
      "tslint -p .",
      "git add"
    ]
  },
  "resolutions": {
    "lodash": "4.17.13",
    "marked": "0.6.1"
  }
}
